<%
axis_names = ["x", "y", "z", "w"]

def convert(value, type_1, type_2)
	if type_1 == "x" then
		if type_2 == "d" then
			return "xtod(#{value})"
		end
		if type_2 == "f" then
			return "xtof(#{value})"
		end
		if type_2 == "i" then
			return "#{value} >> 16"
		end
	end
	
	if type_2 == "x" then
		if type_1 == "d" then
			return "dtox(#{value})"
		end
		if type_1 == "f" then
			return "ftox(#{value})"
		end
		if type_1 == "i" then
			return "#{value} << 16"
		end
	end
	
	return value
end
-%>
