<%
axis_count = ENV["axis_count"].to_i
numeric_type = ENV["numeric_type"]
axis_names = ["x", "y", "z", "w"]
const_zero = {
	"float" => "0.0f",
	"double" => "0.0",
	"fixed16_16" => "0x0",
	"int" => "0"
}
const_one = {
	"float" => "1.0f",
	"double" => "1.0",
	"fixed16_16" => "0x10000",
	"int" => "1"
}
const_two = {
	"float" => "2.0f",
	"double" => "2.0",
	"fixed16_16" => "0x20000",
	"int" => "2"
}
numeric_type_suffixes = {
	"float" => "f",
	"double" => "d",
	"fixed16_16" => "x",
	"int" => "i"
}
sqrt_functions = {
	"float" => "sqrtf",
	"double" => "sqrt",
	"fixed16_16" => "xsqrt"
}
sin_functions = {
	"float" => "sinf",
	"double" => "sin",
	"fixed16_16" => "xsin"
}
cos_functions = {
	"float" => "cosf",
	"double" => "cos",
	"fixed16_16" => "xcos"
}
class_name = "Vector#{axis_count}#{numeric_type_suffixes[numeric_type]}"
class_name_upper = "VECTOR#{axis_count}#{numeric_type_suffixes[numeric_type]}"
c0 = const_zero[numeric_type]
c1 = const_one[numeric_type]
c2 = const_two[numeric_type]

if numeric_type == "fixed16_16"
	def multiply(lhs, rhs)
		return "xmul(#{lhs}, #{rhs})"
	end
	
	def divide(lhs, rhs)
		return "xdiv(#{lhs}, #{rhs})"
	end
else
	def multiply(lhs, rhs)
		return "#{lhs} * #{rhs}"
	end
	
	def divide(lhs, rhs)
		return "#{lhs} / #{rhs}"
	end
end
-%>
